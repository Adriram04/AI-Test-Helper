{
  "manifest_version": 3,
  "name": "AI Test Helper",
  "version": "1.0",
  "description": "Extensi√≥n para responder preguntas tipo test con IA.",
  "permissions": ["storage", "contextMenus", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
